<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner d-flex justify-content-between">
      <form action="/search" class="col-md-8">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major mr-1" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <form action="/" class="dropdown sort-form col-md-4 text-center">
        <h4 class="mb-2">　</h4>
        <button class="btn btn-major sort-btn dropdown-toggle " type="button" id="dropdownMenu2" data-toggle="dropdown"
          aria-expanded="false">
          <i class="fas fa-sort sort"></i> 排序方式
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <button name="sort" class="dropdown-item" type="submit" value="0"> Defautl </button>
          <button name="sort" class="dropdown-item" type="submit" value="1"> A-Z </button>
          <button name="sort" class="dropdown-item" type="submit" value="2"> Z-A </button>
          <button name="sort" class="dropdown-item" type="submit" value="3"> Category </button>
          <button name="sort" class="dropdown-item" type="submit" value="4"> Location </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns" id="data-panel">
        {{#each restaurants}}

        <div class="card mb-3">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils"></i> {{ this.category }}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{ this.rating }}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <a class="mr-1 btn btn-major" href="/restaurants/{{ this._id }}/edit">Edit</a>
            <a class="mr-1 btn btn-info" href="/restaurants/{{ this._id }}">Detail</a>
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>


        {{/each}}
      </div>
    </div>
  </div>
</div>