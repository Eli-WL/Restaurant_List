<h1 class="mb-1 restaurant-show-title">{{restaurant.name}} / {{restaurant.name_en}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <label for="restaurant-category" class="form-label">
          <i class="fas fa-utensils"></i>
          餐廳類別：
          </lable>
          {{restaurant.category}}
      </p>

      <p class="mb-1">
        <label for="restaurant-rating" class="form-label">
          <i class="fas fa-star fa-xs"></i>
          餐廳評價：
          </lable>
          <span class="badge badge-pill badge-danger font-weight-normal">
            {{restaurant.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
      </p>

      <p class="mb-1">
        <label for="restaurant-location" class="form-label">
          <i class="fas fa-map-marker-alt"></i>
          餐廳地址：
        </label>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <label for="restaurant-phone" class="form-label">
          <i class="fas fa-mobile-alt"></i>
          餐廳電話：
        </label>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        <label for="restaurant-description" class="form-label">
          <i class="fas fa-file-alt"></i>
          餐廳描述：
        </label>
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">

      <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>